<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarSize="@dimen/scrollbar_size"
    android:scrollbarThumbVertical="@color/scrollbar"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="30dp"
            android:text="@string/util_color"
            android:textColor="@android:color/black"
            android:textSize="@dimen/utils_text_size" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color"
            android:gravity="center"
            android:text="@string/util_color_title"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:orientation="horizontal">

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/alpha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/alpha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/red1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/red2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/green1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/green2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/blue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.javalive09.sample.thirdlibs.wheel.WheelView
                android:id="@+id/blue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>