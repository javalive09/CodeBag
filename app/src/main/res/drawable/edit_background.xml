<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="#E6E6E6" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="2dp"
                        android:color="#6089f7" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="2dp"
                        android:color="#256EFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>